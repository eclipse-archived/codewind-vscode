// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "isBackground": true
        },
        {
            "type": "npm",
            "script": "compile",
            "isBackground": false,
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "type": "shell",
            "label": "copy-strings",
            "isBackground": false,
            "command": "npm run copy-strings",
            "windows": {
                "command": "mkdir -p ./out/constants/strings/; copy -v ./src/constants/strings/strings-*.json ./out/constants/strings/"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "build",
            "dependsOn": [ "npm: compile", "copy-strings" ]
        }
    ]
}
